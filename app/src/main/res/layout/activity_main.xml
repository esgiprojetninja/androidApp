<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ninja.esgi.tvdbandroidapp.activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:weightSum="1"
            android:background="?colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal"
                android:showDividers="end">

                <Button
                    android:id="@+id/login_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_link"
                    android:onClick="loginActivity"
                    android:visibility="visible"
                    android:clickable="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/user_greetings"
                    android:textColor="@android:color/black"
                    android:visibility="gone"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/logout_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout_link"
                    android:visibility="gone"
                    android:onClick="logout"
                    android:clickable="true"/>

            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4"
            android:weightSum="1"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_show_link_btn"
                android:weightSum="1"
                android:clickable="true"
                android:onClick="searchSeriesActivity"
                android:text="@string/search_show_link"/>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
